title = {{Pressure dependence of the solubility of nitrogen, argon, krypton, and xenon in water}},
url = {http://scitation.aip.org/content/aip/journal/jcp/93/4/10.1063/1.458911},
volume = {93},
year = {1990}
}
@article{Plath1980,
