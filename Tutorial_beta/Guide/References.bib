doi = {10.1016/j.gca.2015.06.026},
file = {:Users/simonlock/Library/Application Support/Mendeley Desktop/Downloaded/Fischer et al. - 2015 - High pressure metal–silicate partitioning of Ni, Co, V, Cr, Si, and O(3).pdf:pdf},
