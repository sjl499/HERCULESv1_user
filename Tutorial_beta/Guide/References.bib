issn = {00191035},
journal = {Icarus},
keywords = {Moon,Planetary formation,Satellites,formation},
pages = {440--463},
title = {{Evolution of the protolunar disk: Dynamics, cooling timescale and implantation of volatiles onto the Earth}},
