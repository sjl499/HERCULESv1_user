author = {Odert, P. and Lammer, H. and Erkaev, N. V. and Nikolaou, A. and Lichtenegger, H. I. M. and Johnstone, C. P. and Kislyakova, K. G. and Leitzinger, M. and Tosi, N.},
eprint = {1706.06988},
file = {:Users/simonlock/Library/Application Support/Mendeley Desktop/Downloaded/Odert et al. - 2017 - Escape and fractionation of volatiles and noble gases from Mars-sized planetary embryos and growing protoplanets.pdf:pdf},
month = {jun},
title = {{Escape and fractionation of volatiles and noble gases from Mars-sized planetary embryos and growing protoplanets}},
url = {http://arxiv.org/abs/1706.06988},
