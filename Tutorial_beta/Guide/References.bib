file = {:Users/simonlock/Library/Application Support/Mendeley Desktop/Downloaded/Dauphas et al. - 2014 - Calcium-48 isotopic anomalies in bulk chondrites and achondrites Evidence for a uniform isotopic reservoir in th.pdf:pdf},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {accretion,anomalies,bulk chondrites,calcium-48,isotopes,meteorites,nucleosynthesis},
month = {dec},
pages = {96--108},
title = {{Calcium-48 isotopic anomalies in bulk chondrites and achondrites: Evidence for a uniform isotopic reservoir in the inner protoplanetary disk}},
url = {http://www.sciencedirect.com/science/article/pii/S0012821X14005706},
volume = {407},
year = {2014}
}
@article{Quarles2015,
