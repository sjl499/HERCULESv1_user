doi = {10.1016/j.epsl.2017.12.042},
file = {:Users/simonlock/Library/Application Support/Mendeley Desktop/Downloaded/Siebert et al. - 2018 - Chondritic MnNa ratio and limited post-nebular volatile loss of the Earth.pdf:pdf},
