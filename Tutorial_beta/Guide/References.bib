doi = {10.1016/j.epsl.2010.10.036},
file = {:Users/simonlock/Library/Application Support/Mendeley Desktop/Downloaded/Pahlevan, Stevenson, Eiler - 2011 - Chemical fractionation in the silicate vapor atmosphere of the Earth.pdf:pdf},
