doi = {10.1016/j.gca.2015.11.041},
file = {:Users/simonlock/Library/Application Support/Mendeley Desktop/Downloaded/Bonnand, Parkinson, Anand - 2016 - Mass dependent fractionation of stable chromium isotopes in mare basalts Implications for the formati.pdf:pdf},
issn = {00167037},
journal = {Geochimica et Cosmochimica Acta},
month = {feb},
pages = {208--221},
title = {{Mass dependent fractionation of stable chromium isotopes in mare basalts: Implications for the formation and the differentiation of the Moon}},
