pmid = {25114307},
publisher = {The Royal Society},
title = {{Accretion of the Moon from non-canonical discs}},
url = {http://classic.rsta.royalsocietypublishing.org/content/372/2024/20130256.full},
volume = {372},
year = {2014}
}
@article{Dauphas2014Ca,
