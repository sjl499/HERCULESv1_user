doi = {10.1016/j.gca.2011.09.004},
file = {:Users/simonlock/Library/Application Support/Mendeley Desktop/Downloaded/Jing, Karato - 2011 - A new approach to the equation of state of silicate melts An application of the theory of hard sphere mixtures.pdf:pdf},
issn = {00167037},
