journal = {Physics of the Earth and Planetary Interiors},
keywords = {Deep earthquakes,Differential residual,Focal mechanism,Metastable olivine wedge,Western Pacific slab},
month = {jan},
pages = {1--7},
title = {{Detection of metastable olivine wedge in the western Pacific slab and its geodynamic implications}},
