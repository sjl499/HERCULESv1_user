doi = {10.1016/j.epsl.2015.07.061},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {Venusian atmosphere,crust/mantle oxidation,desiccation,heavy bombardment,hypervelocity impacts,impact excavation},
month = {nov},
pages = {181--190},
title = {{Impact-driven planetary desiccation: The origin of the dry Venus}},
url = {http://www.sciencedirect.com/science/article/pii/S0012821X1500504X},
volume = {429},
year = {2015}
}
