issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {Giant Impact,Iron isotopes,Lunar Magma Ocean theory,Origin of the Moon},
month = {nov},
pages = {202--208},
title = {{The earliest Lunar Magma Ocean differentiation recorded in Fe isotopes}},
