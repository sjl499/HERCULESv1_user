issn = {10525173},
journal = {GSA Today},
number = {4-5},
pages = {4--11},
title = {{Temporal evolution of continental lithospheric strength in actively deforming regions}},
url = {http://www.geosociety.org/gsatoday/archive/18/4/pdf/i1052-5173-18-4-4.pdf},
