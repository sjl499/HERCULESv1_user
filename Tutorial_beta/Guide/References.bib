issn = {0004-637X},
journal = {The Astrophysical Journal},
keywords = {accretion,accretion disks,hydrodynamics,planets and satellites: formation},
language = {en},
month = {jan},
number = {2},
pages = {137},
publisher = {IOP Publishing},
title = {{MERGING CRITERIA FOR GIANT IMPACTS OF PROTOPLANETS}},
