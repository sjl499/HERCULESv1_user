issn = {0012-821X},
journal = {Earth and Planetary Science Letters},
month = {apr},
number = {1-2},
pages = {251--259},
publisher = {Elsevier},
title = {{Solidus and liquidus profiles of chondritic mantle: Implication for melting of the Earth across its history}},
