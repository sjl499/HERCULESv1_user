author = {Brouwers, M. G. and Vazan, A. and Ormel, C. W.},
eprint = {1708.05392},
file = {:Users/simonlock/Library/Application Support/Mendeley Desktop/Downloaded/Brouwers, Vazan, Ormel - 2017 - How cores grow by pebble accretion.pdf:pdf},
