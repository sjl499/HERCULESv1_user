month = {aug},
number = {16},
pages = {2863--2886},
title = {{Early solar system timescales according to 53Mn-53Cr systematics}},
url = {http://www.sciencedirect.com/science/article/pii/S0016703798001896},
volume = {62},
year = {1998}
}
@article{Young2014,
