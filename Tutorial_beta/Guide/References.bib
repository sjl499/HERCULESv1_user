title = {{Record of modern-style plate tectonics in the Palaeoproterozoic Trans-Hudson orogen}},
url = {http://dx.doi.org/10.1038/ngeo2904 http://10.0.4.14/ngeo2904 http://www.nature.com/ngeo/journal/v10/n4/abs/ngeo2904.html{\#}supplementary-information},
