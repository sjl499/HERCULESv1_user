journal = {The Astrophysical Journal Letters},
month = {apr},
number = {1},
pages = {57--60},
publisher = {IOP Publishing},
title = {{Formation and destruction of small binary asteroids}},
url = {http://stacks.iop.org/1538-4357/659/i=1/a=L57 http://iopscience.iop.org/1538-4357/659/1/L57},
volume = {659},
year = {2007}
}
@article{Richardson2006,
