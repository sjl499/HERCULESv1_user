arxivId = {1707.06927},
author = {Turbet, Martin and Bolmont, Emeline and Leconte, Jeremy and Forget, Francois and Selsis, Franck and Tobie, Gabriel and Caldas, Anthony and Naar, Joseph and Gillon, Michael},
eprint = {1707.06927},
